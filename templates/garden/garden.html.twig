{% extends "garden/base.html.twig" %}
{% block title %}
	The Garden | Garden
{% endblock %}

{% block content %}

    <div class="arrow">
        <a href="{{ path("garden-customer") }}"><img src="../../img/arrowLeft.png" alt="path to customer page" width="50" class="cursor-pointer"></a>
        <p>CUSTOMER</p>
    </div>


    <div class="garden">

    <div class="tool-container">
        <h2>Tools</h2>
        <div class="tools">
            <img src="../../img/IconWaterCan.png" class="img-icon cursor-pointer" id="water-tool" alt="water tool">
            <p>watering can</p>
        </div>
    </div>

    <div class="plants-container">
        {% for i in 0..garden|length-1 %}
            {% if garden[i].getStatus() is not same as "destroyed" %}
                <form name="ground{{i}}" class="ground-form">
                    <input type="hidden" name="index" value="{{i}}">
                    <input type="hidden" name="name" value="empty">
                    <input type="hidden" name="price" value="0">
                    <input type="image" src="../../img/{{garden[i].getImageURL()}}.png" alt="plant {{i + 1}}" class="img cursor-pointer">

                </form>
            {% else %}
                <img type="image" src="../../img/puddle.png" alt="puddle" width="150" class="puddle">
            {% endif %}
        {% endfor %}
    </div>

    <div class="seed-bag">
        <h2>Seed bag</h2>
        <div class="seed-grid">
            {% for name, price in seedBox %}
                <form class="seed">
                    <input type="hidden" id="name" name="name" , value={{name}}>
                    <input type="hidden" id="price" name="price" , value={{price}}>
                    <img src="../../img/{{name}}seed.png" alt="seed toool {{name}}" width="50" class="cursor-pointer">
                    <p>{{name}}</p>
                </form>
            {% endfor %}
        </div>
    </div>

    </div>

    <div class="arrow">
        <a href="{{ path("garden-about") }}"><img src="../../img/arrowRight.png" alt="path to about page" width="50" class="cursor-pointer"></a>
        <p>ABOUT</p>
    </div>


    <script src="{{ asset("js/garden.js") }}"></script>

{% endblock %}

