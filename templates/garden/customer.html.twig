{% extends "garden/base.html.twig" %}
{% block title %}
	The Garden | Customer
{% endblock %}

{% block content %}

    <a href="{{ path("garden-statistics") }}"><img src="../../img/arrowLeft.png" alt="flower 1" width="50" class="cursor-pointer"></a>

    <div>
        <h2 class="customer-h2">Customer says:</h2>
        <p class="customer-p">{{message}}</p>

        {% if (newIncome) %}

            <p> You earned ${{newIncome}}!</p>

            <form class="garden-enter">
            <input type="submit" value="Next customer">
            </form>

        {% endif %}

        <br>
        <br>
        <br>
        <br>

        <div class="economic-container">
        <p class="economic">Plants sold: {{numberSold}} st</p>
        <p class="economic">Total income: ${{totalIncome}}</p>
        </div>
    </div>

    <a href="{{ path("garden") }}"><img src="../../img/arrowRight.png" alt="flower 1" width="50" class="cursor-pointer"></a>

{% endblock %}

