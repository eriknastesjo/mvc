{% extends "garden/base.html.twig" %}
{% block title %} The Garden | History {% endblock %}

{% block content %}

<div class="arrow">
	<a href="{{ path("garden-about") }}"><img src="{{asset("img/arrowLeft.png")}}" alt="path to about page" width="50" class="cursor-pointer"></a>
	<p>ABOUT</p>
</div>

<div class="history-container">

	<h1>History</h1>

	<div class="table-container">

	<div>
	<table class="table">
	<p class="p-header">Planted seeds</p>
		<tr>
			<th>Seed</th>
			<th>Date</th>
			<th>Time</th>

		</tr>
		<tr>
		{% for entry in tablePlantedSeeds %}
			<tr>
				<td>{{entry.plant}}</td>
				<td>{{entry.date}}</td>
				<td>{{entry.time}}</td>
			</tr>
		{% endfor %}
		</tr>

	</table>
	</div>

	<div>
	<table class="table">
	<p class="p-header">Plants sold</p>
		<tr>
			<th>Plant</th>
			<th>Price</th>
			<th>Date</th>
			<th>Time</th>

		</tr>
		<tr>
		{% for entry in tableSales %}
			<tr>
				<td>{{entry.plant}}</td>
				<td>${{entry.price}}</td>
				<td>{{entry.date}}</td>
				<td>{{entry.time}}</td>
			</tr>
		{% endfor %}
		</tr>

	</table>
	</div>

	</div>

</div>


<div class="arrow">
	<a href="{{ path("garden-customer") }}"><img src="{{asset("img/arrowRight.png")}}" alt="path to customer page" width="50" class="cursor-pointer"></a>
	<p>CUSTOMER</p>
</div>


{% endblock %}

